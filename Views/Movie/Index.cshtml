@model IList<MovieCrud.Models.Movie>
@{
    var i = 1;
}

<h2>Movies</h2>
<hr>

<a asp-action="create" asp-controller="movie" class="btn btn-success">Create new</a>

<table class="table table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Year</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@i</td>
                <td>@movie.Name</td>
                <td>@movie.Year</td>
                <td>
                    <a asp-action="details" asp-route-id="@movie.Id" class="btn btn-default">Details</a>
                    <a asp-action="delete" asp-route-id="@movie.Id" class="btn btn-danger">Delete</a>
                    <a asp-action="edit" asp-route-id="@movie.Id" class="btn btn-primary">Edit</a>
                </td>
            </tr>
            i++;
        }
    </tbody>
</table>